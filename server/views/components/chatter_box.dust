<div class="chatter-box">
  <div class="input-group">
    <input type="text" ng-model="message" class="form-control message-input" placeholder="Enter message..."
    ng-keypress="$event.which === 13 ? postMessage() : null" ng-disabled="!chat.currentRoom"/>
  <span class="input-group-btn">
    <button class="btn btn-primary post-message" ng-click="postMessage()" ng-disabled="!chat.currentRoom">
      <i class="fa fa-arrow-circle-right fa-4"></i>
    </button>
  </span>
  </div>

</div>




